<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SeriesTextStyle" >
        <item name="android:textSize">75dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RegistrationTextStyle" >
        <item name="android:textSize">78dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="RegionTextStyle" >
        <item name="android:textSize">50dp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="NumberPickerText">
        <item name="android:textSize">22dp</item>
    </style>

    <style name="NumberPikerDividerColor" parent="AppTheme">
        <item name="colorControlNormal">#000000</item>
    </style>

</resources>
