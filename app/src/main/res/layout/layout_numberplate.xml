<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/number_plate_view"
    android:layout_width="350dp"
    android:layout_height="140dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp"
    tools:context="com.example.numberplate.numberplate.MainActivity">

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/RUSnumber"
        android:layout_alignTop="@+id/RUSnumber"
        android:layout_centerHorizontal="true">

        <com.example.numberplate.numberplate.CarPlateTextView
            android:id="@+id/series1"
            style="@style/SeriesTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:text="C" />

        <com.example.numberplate.numberplate.CarPlateTextView
            android:id="@+id/registration_number"
            style="@style/RegistrationTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="50dp"
            android:text="000" />

        <com.example.numberplate.numberplate.CarPlateTextView
            android:id="@+id/series2"
            style="@style/SeriesTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="155dp"
            android:text="A" />

        <com.example.numberplate.numberplate.CarPlateTextView
            android:id="@+id/series3"
            style="@style/SeriesTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="190dp"
            android:text="A" />

        <com.example.numberplate.numberplate.CarPlateTextView
            android:id="@+id/region_number"
            style="@style/RegionTextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="245dp"
            android:text="99" />


    </RelativeLayout>

    <ImageView
        android:id="@+id/RUSnumber"
        android:layout_width="390dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="45dp"
        android:focusable="false"
        android:src="@drawable/img_rus_carplate" />

</RelativeLayout>

